@model Nothing.Web.Common.ResultModel<Language>
@using Nothing.Model.Entity
@{ 
    var lstLanguage = Model.listModel;
}

<style>
    .input-search{
        display:inline-block;
        width: 200px !important;
        height: calc(2.0625rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da !important;
        border-radius: 10px !important;
        background: #fff !important;
    }
</style>
<div class="row">
    <div class="col-md-4" style="width:150px;">
        <button type="button" class="btn mb-1 btn-primary" ng-click="showPopupAdd()">
            Thêm <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
        </button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered" id="tableLanguage">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Từ khóa</th>
                <th scope="col">Tiếng Việt</th>
                <th scope="col">Tiếng Anh</th>
                <th scope="col">Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lstLanguage)
            {
                <tr>
                    <td>@item.ID_Language</td>
                    <td>@item.Key_Language</td>
                    <td>@item.Language_VN</td>
                    <td>@item.Language_EN</td>
                    <td>
                        <span>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                            <i class="fa fa-pencil color-muted m-r-5"></i> </a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Close">
                            <i class="fa fa-close color-danger"></i></a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    var lstLanguage = [];
    $(document).ready(function () {

        $.extend($.fn.dataTable.defaults, {
           
        });

        $('#tableLanguage').DataTable({
          
        });

        $('#tableLanguage_length select').select2({
             minimumResultsForSearch: Infinity
        });
        $('#tableLanguage_filter input').addClass('input-search');
       
    });
</script>

